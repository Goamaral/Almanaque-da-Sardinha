<div class="submission">
  <div class="grid-submission">
    <form action="<%= routes['website_forgot_password'] %>" method="post">
      <div class="submission-title">RECUPERAR PASSWORD</div>

      <div class="description">
        <label for="email">Email</label>
        <input type="email" name="email" class="text-input">
      </div>

      <div class="submit">
        <input type="submit" value="REGISTAR">
      </div>

      <% if (email_sent) { %>
        <p>Email de recuperação de password enviado</p>
      <% } %>
    </form>
  </div>
</div>